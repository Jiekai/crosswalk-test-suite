<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="Cordova Sample Apps" name="cordova-sampleapp-android-tests">
    <set name="SampleApp_auto" type="pyunit">
      <testcase component="Cordova Sample Apps/Spacedodge" execution_type="auto" id="Crosswalk_Cordova_SampleApp_Spacedodge_Build" purpose="Validate if sample app Spacedodge could be built successfully">
        <description>
          <test_script_entry>/opt/cordova-sampleapp-android-tests/sampleapp/spacedodge_build.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Sample Apps/Spacedodge" execution_type="auto" id="Crosswalk_Cordova_SampleApp_Spacedodge_Install" purpose="Validate if sample app Spacedodge could be installed successfully">
        <description>
          <test_script_entry>/opt/cordova-sampleapp-android-tests/sampleapp/spacedodge_install.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Sample Apps/Spacedodge" execution_type="auto" id="Crosswalk_Cordova_SampleApp_Spacedodge_Launch" purpose="Validate if sample app Spacedodge could be launched successfully">
        <description>
           <test_script_entry>/opt/cordova-sampleapp-android-tests/sampleapp/spacedodge_launch.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Sample Apps/Spacedodge" execution_type="auto" id="Crosswalk_Cordova_SampleApp_Spacedodge_Close" purpose="Validate if sample app Spacedodge could be closed successfully">
        <description>
          <test_script_entry>/opt/cordova-sampleapp-android-tests/sampleapp/spacedodge_close.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Sample Apps/Spacedodge" execution_type="auto" id="Crosswalk_Cordova_SampleApp_Spacedodge_UnInstall" purpose="Validate if sample app Spacedodge could be uninstalled successfully">
        <description>
          <test_script_entry>/opt/cordova-sampleapp-android-tests/sampleapp/spacedodge_uninstall.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Sample Apps/Spacedodge" execution_type="auto" id="Crosswalk_Cordova_SampleApp_Spacedodge_Uninstall_WithAppRunning" purpose="Validate Crosswalk support that uninstall the sample app Spacedodge when it's actually running">
        <description>
           <test_script_entry>/opt/cordova-sampleapp-android-tests/sampleapp/spacedodge_uninstall_withAppRunning.py</test_script_entry>
        </description>
      </testcase>
    </set>
    <set name="SampleApp_manual" type="js">
      <testcase component="Cordova Sample Apps/Spacedodge" execution_type="manual" id="Crosswalk_Cordova_SampleApp_Spacedodge_AppFunction" purpose="Validate if sample app Spacedodge function could work well">
        <description>
          <pre_condition>
            1. Make sure the Spacedodge webapp is launched.
          </pre_condition>
          <test_script_entry>/opt/cordova-sampleapp-android-tests/sampleapp/Crosswalk_Cordova_SampleApp_Spacedodge_AppFunction.html </test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Sample Apps/Spacedodge" execution_type="manual" id="Crosswalk_Cordova_SampleApp_Spacedodge_Icon" purpose="Validate if sample app Spacedodge icon display normally">
        <description>
          <pre_condition>
            1. Make sure Spacedodge webapp is installed;
            2. Make sure Spacedodge webapp is available.
          </pre_condition>
          <test_script_entry>/opt/cordova-sampleapp-android-tests/sampleapp/Crosswalk_Cordova_SampleApp_Spacedodge_Icon.html </test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Sample Apps/Spacedodge" execution_type="manual" id="Crosswalk_Cordova_SampleApp_Spacedodge_Switch" purpose="Validate if sample app Spacedodge could switch back successfully">
        <description>
          <pre_condition>
            1. Make sure the Spacedodge webapp is launched.
          </pre_condition>
          <test_script_entry>/opt/cordova-sampleapp-android-tests/sampleapp/Crosswalk_Cordova_SampleApp_Spacedodge_Switch.html </test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Sample Apps/Spacedodge" execution_type="manual" id="Crosswalk_Cordova_SampleApp_Spacedodge_Orientation" purpose="Validate if sample app Spacedodge could rotate between portrait orientation screen and landscape orientation screen">
        <description>
          <pre_condition>
            1. Make sure the Spacedodge webapp is launched.
          </pre_condition>
          <test_script_entry>/opt/cordova-sampleapp-android-tests/sampleapp/Crosswalk_Cordova_SampleApp_Spacedodge_Orientation.html </test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
